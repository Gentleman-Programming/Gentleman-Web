  @media (max-width: 480px) {
    .temple-container {
      padding: 0 1rem;
    }

    .temple-section {
      padding: 1.5rem;
    }

    .temple-inscription {
      padding: 1.5rem;
    }

    .main-quote {
      font-size: 1rem;
    }

    .scroll-portal {
      width: 50px;
      height: 50px;
      bottom: 1rem;
      right: 1rem;
    }
  }
</style>

<script>
  function scrollToTop() {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  }

  // Show/hide scroll portal
  function toggleScrollPortal() {
    const portal = document.getElementById('scroll-portal') as HTMLElement;
    if (!portal) return;

    const scrollPosition = window.pageYOffset;

    if (scrollPosition > 300) {
      portal.classList.add('visible');
    } else {
      portal.classList.remove('visible');
    }
  }

  // Initialize scroll portal
  document.addEventListener('DOMContentLoaded', function() {
    window.addEventListener('scroll', toggleScrollPortal);

    // Add sound effects to social links
    document.querySelectorAll<HTMLElement>('.social-link').forEach(link => {
      link.addEventListener('mouseenter', function(this: HTMLElement) {
        const platform = this.dataset.platform;
        console.log(`üîä Social hover sound: ${platform}`);
      });

      link.addEventListener('click', function(this: HTMLElement) {
        const platform = this.dataset.platform;
        console.log(`üîä Social click sound: ${platform}`);
      });
    });

    // Add click effects to action buttons
    document.querySelectorAll<HTMLElement>('.action-btn').forEach(btn => {
      btn.addEventListener('click', function(this: HTMLElement) {
        this.style.animation = 'pixelShake 0.3s ease-in-out';
        setTimeout(() => {
          this.style.animation = '';
        }, 300);
      });
    });

    // Temple links smooth scroll
    document.querySelectorAll<HTMLAnchorElement>('.temple-link[href^="#"]').forEach(link => {
      link.addEventListener('click', function(this: HTMLAnchorElement, e: MouseEvent) {
        e.preventDefault();
        const targetId = this.getAttribute('href')?.substring(1);
        if (!targetId) return;

        const targetElement = document.getElementById(targetId);

        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Animate temple sections on scroll
    const templeObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            (entry.target as HTMLElement).style.animation = 'pixelFadeIn 0.8s ease-out forwards';
          }, index * 200);
        }
      });
    }, { threshold: 0.2 });

    document.querySelectorAll<HTMLElement>('.temple-section').forEach(section => {
      templeObserver.observe(section);
    });

    // Portal click effect
    const portal = document.getElementById('scroll-portal') as HTMLElement;
    if (portal) {
      portal.addEventListener('click', function(this: HTMLElement) {
        console.log('üîä Portal activation sound');

        // Add portal effect
        this.style.animation = 'pixelGlow 0.5s ease-in-out';
        setTimeout(() => {
          this.style.animation = '';
        }, 500);
      });
    }

    // Add tooltips to contact items
    document.querySelectorAll<HTMLElement>('.contact-item').forEach(item => {
      item.addEventListener('mouseenter', function(this: HTMLElement) {
        const label = this.querySelector('.contact-label')?.textContent;
        console.log(`‚ÑπÔ∏è Contact info: ${label}`);
      });
    });
  });

  // Global function for scroll to top
  window.scrollToTop = scrollToTop;
</script>
