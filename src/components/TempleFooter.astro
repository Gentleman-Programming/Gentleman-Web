      flex-direction: column;
      text-align: center;
    }

    .inscription-content::before,
    .inscription-content::after {
      display: none;
    }

    .temple-pillars {
      display: none;
    }

    .social-grid {
      gap: 0.75rem;
    }

    .social-link {
      padding: 0.75rem;
    }

    .social-icon {
      width: 30px;
      height: 30px;
    }
