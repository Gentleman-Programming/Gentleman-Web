<script>
  // === TESTIMONIALS SYSTEM ===
  function startYourQuest() {
    // Show quest initiation dialog
    if (window.GentlemanRPG?.showDialog) {
      window.GentlemanRPG.showDialog(
        "Ready to join these success stories? Let's begin your epic coding journey together!"
      );
    }

    // Show achievement
    if (window.GentlemanRPG?.showAchievement) {
      window.GentlemanRPG.showAchievement('üìñ', 'Grimoire Explored!', 'You discovered the tales of successful adventurers');
    }

    // Update player stats
    if (window.playerStats) {
      window.playerStats.xp += 50;
      if (window.updatePlayerStats) {
        window.updatePlayerStats();
      }
    }
  }

  // === TESTIMONIAL INTERACTIONS ===
  function initializeTestimonialInteractions() {
    const testimonialPages = document.querySelectorAll<HTMLElement>('.testimonial-page');

    testimonialPages.forEach((page, index) => {
      const pageContent = page.querySelector<HTMLElement>('.page-content');

      if (pageContent) {
        // Add click interaction
        pageContent.addEventListener('click', function(this: HTMLElement) {
          // Highlight effect
          this.style.boxShadow = '0 0 40px rgba(75, 0, 130, 0.6), 0 8px 32px rgba(75, 0, 130, 0.4)';

          setTimeout(() => {
            this.style.boxShadow = '';
          }, 1000);

          // Show achievement for reading testimonials
          if (window.GentlemanRPG?.showAchievement && index === 0) {
            window.GentlemanRPG.showAchievement('üìú', 'Story Read!', 'You discovered an adventurer\'s tale');
          }
        });

        // Add keyboard navigation
        pageContent.setAttribute('tabindex', '0');
        pageContent.addEventListener('keydown', function(this: HTMLElement, e: KeyboardEvent) {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            this.click();
          }
        });
      }
    });
  }

  // === STATS ANIMATION ===
  function initializeStatsAnimation() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const statValues = entry.target.querySelectorAll<HTMLElement>('.stat-value');

          // Animate each stat
          setTimeout(() => animateStatValue(statValues[0], 0, 50, 2000), 200);
          setTimeout(() => animateStatValue(statValues[1], 0, 95, 2000, '%'), 400);
          setTimeout(() => animateStatValue(statValues[2], 0, 40, 2000, '%'), 600);
          setTimeout(() => animateStatValue(statValues[3], 0, 10, 2000, '+'), 800);

          // Show stats achievement
          setTimeout(() => {
            if (window.GentlemanRPG?.showAchievement) {
              window.GentlemanRPG.showAchievement('üìä', 'Stats Revealed!', 'Success metrics are impressive!');
            }
          }, 2500);

          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });

    const statsPanel = document.querySelector('.stats-panel');
    if (statsPanel) {
      observer.observe(statsPanel);
    }
  }

  function animateStatValue(element: HTMLElement, start: number, end: number, duration: number, suffix = '') {
    if (!element) return;

    const startTime = performance.now();

    function updateValue(currentTime: number) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      const easeProgress = 1 - Math.pow(1 - progress, 3); // Ease-out cubic

      const current = Math.floor(start + (end - start) * easeProgress);
      element.textContent = `${current}${suffix}`;

      if (progress < 1) {
        requestAnimationFrame(updateValue);
      }
    }

    requestAnimationFrame(updateValue);
  }

  // === TESTIMONIAL CAROUSEL ===
  function initializeTestimonialCarousel() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Animate testimonial pages sequentially
          const pages = entry.target.querySelectorAll<HTMLElement>('.testimonial-page');
          pages.forEach((page, index) => {
            setTimeout(() => {
              page.style.animation = `slide-in-left 0.6s ease-out forwards`;
            }, index * 150);
          });

          // Show testimonials achievement
          setTimeout(() => {
            if (window.GentlemanRPG?.showAchievement) {
              window.GentlemanRPG.showAchievement('üìñ', 'Grimoire Opened!', 'Tales of successful quests revealed');
            }
          }, 1000);

          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });

    const testimonialsGrid = document.querySelector('.testimonials-grid');
    if (testimonialsGrid) {
      observer.observe(testimonialsGrid);
    }
  }

  // === KEYBOARD NAVIGATION ===
  function initializeKeyboardNavigation() {
    const testimonialPages = document.querySelectorAll<HTMLElement>('.page-content[tabindex]');
    const ctaButton = document.querySelector<HTMLElement>('.testimonials-cta .btn-pixel-main');

    testimonialPages.forEach((page, index) => {
      page.addEventListener('keydown', (e: KeyboardEvent) => {
        switch(e.key) {
          case 'ArrowDown':
          case 'ArrowRight':
            e.preventDefault();
            const nextPage = testimonialPages[index + 1] || ctaButton || testimonialPages[0];
            nextPage.focus();
            break;
          case 'ArrowUp':
          case 'ArrowLeft':
            e.preventDefault();
            const prevPage = testimonialPages[index - 1] || testimonialPages[testimonialPages.length - 1];
            prevPage.focus();
            break;
          case 'Home':
            e.preventDefault();
            testimonialPages[0].focus();
            break;
          case 'End':
            e.preventDefault();
            (ctaButton || testimonialPages[testimonialPages.length - 1]).focus();
            break;
        }
      });
    });
  }

  // === ACCESSIBILITY FEATURES ===
  function initializeAccessibility() {
    // Add ARIA labels to testimonials
    const testimonialPages = document.querySelectorAll<HTMLElement>('.testimonial-page');
    testimonialPages.forEach((page) => {
      const adventurerName = page.querySelector('.adventurer-name')?.textContent;
      const pageContent = page.querySelector<HTMLElement>('.page-content');

      if (pageContent && adventurerName) {
        pageContent.setAttribute('aria-label', `Testimonial from ${adventurerName}`);
        pageContent.setAttribute('role', 'article');
      }
    });

    // Add ARIA labels to stats
    const statItems = document.querySelectorAll<HTMLElement>('.stat-item');
    statItems.forEach(item => {
      const value = item.querySelector('.stat-value')?.textContent;
      const label = item.querySelector('.stat-label')?.textContent;

      if (value && label) {
        item.setAttribute('aria-label', `${value} ${label}`);
      }
    });
  }

  // === INITIALIZATION ===
  document.addEventListener('DOMContentLoaded', function() {
    initializeTestimonialInteractions();
    initializeStatsAnimation();
    initializeTestimonialCarousel();
    initializeKeyboardNavigation();
    initializeAccessibility();

    // Add global function
    window.startYourQuest = startYourQuest;
  });

  // === PERFORMANCE OPTIMIZATION ===
  // Lazy load testimonial interactions during idle time
  if ('requestIdleCallback' in window) {
    requestIdleCallback(() => {
      // Preload any testimonial-related assets
      const testimonialPages = document.querySelectorAll<HTMLElement>('.page-content');
      testimonialPages.forEach(page => {
        page.style.willChange = 'transform';
      });
    });
  }
</script>
